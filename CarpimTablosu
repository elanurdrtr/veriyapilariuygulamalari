//CarpimTablosu
#include <iostream>

using namespace std;
int main() {
	cout<<"                                 Carpim Tablosu"<<endl;
	cout<<"-----------------------------------------------"<<endl;
	cout<<"# | ";
	for(int i=1; i<=9; i++){
		cout<<"   "<<i;
	}
	cout<<endl<<"----------------------------------------"<<endl;
	for(int i=1; i<=9; i++){
		cout<<i<<" | ";
		for(int j=1; j<=9; j++){
			if(i*j<10)cout<<"   "<<(i*j);
			else cout<<"  "<<(i*j);
		}
		cout << endl;
	}
	cin.get();
	cin.ignore();
	return 0;
}
